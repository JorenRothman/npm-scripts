{
  "name": "npm-scripts",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint:scss": "stylelint  --cache --cache-location .stylelintcache --color src/scss/**/*.scss",
    "lint:js": "eslint src/js/**/*.js --cache --cache-location .eslintcache --color",
    "postcss": "postcss dist/css/style.min.css -r",
    "build:scss": "sass src/scss/base.scss dist/css/style.min.css --style compressed --load-path=\"node_modules\"",
    "build:js": "webpack --config webpack.prod.js",
    "watch:scss": "onchange \"src/scss/**/*.scss\" -- npm run build:scss",
    "watch:js": "webpack --config webpack.dev.js --watch",
    "browsersync": "browser-sync start --files \"dist/**/*\" \"*.php\" --port 3000 --https --proxy \"https://sungevity.test\"",
    "dev": "npm-run-all --parallel watch:* browsersync",
    "build": "npm-run-all lint:* build:* postcss"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.18.5",
    "@babel/plugin-transform-runtime": "^7.18.5",
    "@babel/preset-env": "^7.18.2",
    "@csstools/postcss-sass": "^5.0.1",
    "autoprefixer": "^10.4.7",
    "babel-loader": "^8.2.5",
    "browser-sync": "^2.27.10",
    "cross-env": "^7.0.3",
    "cssnano": "^5.1.12",
    "eslint": "^8.18.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.3",
    "eslint-plugin-promise": "^6.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.4.14",
    "postcss-cli": "^9.1.0",
    "postcss-preset-env": "^7.7.2",
    "postcss-scss": "^4.0.4",
    "sass": "^1.53.0",
    "stylelint": "^14.9.1",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-config-standard-scss": "^4.0.0",
    "stylelint-scss": "^4.2.0",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "dotenv": "^16.0.1",
    "locomotive-scroll": "^4.1.4",
    "select2": "^4.1.0-rc.0",
    "sharer.js": "^0.5.1",
    "swiper": "^8.2.4",
    "vanilla-lazyload": "^17.8.2"
  }
}
