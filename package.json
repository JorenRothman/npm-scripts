{
  "name": "npm-scripts",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean:dist": "rimraf dist",
    "lint:scss": "stylelint src/scss/**/*.scss  --color",
    "lint:js": "eslint src/js/**/*.js --color",
    "postcss": "postcss dist/css/style.min.css -r",
    "build:scss": "sass src/scss/base.scss dist/css/style.min.css --style compressed --load-path=\"node_modules\"",
    "build:js": "webpack --config webpack.prod.js",
    "hash:css": "hashmark -s -l 8 -m dist/assets.json dist/css/style.min.css \"{dir}/{name}{hash}{ext}\"",
    "hash:js": "hashmark -s -l 8 -m dist/assets.json dist/js/main.min.js \"{dir}/{name}{hash}{ext}\"",
    "copy:images": "copyfiles -u 2 \"src/img/**/*\"   \"dist/img\"",
    "copy:fonts": "copyfiles -u 2 \"src/fonts/**/*\"   \"dist/fonts\"",
    "watch:scss": "onchange \"src/scss/**/*.scss\" -- npm run build:scss",
    "watch:js": "webpack --config webpack.dev.js --watch",
    "watch:images": "onchange \"src/img/**/*\" -- npm run copy:images",
    "watch:fonts": "onchange \"src/fonts/**/*\" -- npm run copy:fonts",
    "browsersync": "dotenv -- cross-var browser-sync start --files \"dist/**/*\" \"*.php\" --port 3000 --proxy %PROXY%",
    "lint": "npm-run-all lint:*",
    "dev": "npm-run-all --parallel watch:* browsersync",
    "build": "npm-run-all clean:* lint:* build:* postcss hash:*"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.18.5",
    "@babel/plugin-transform-runtime": "^7.18.5",
    "@babel/preset-env": "^7.18.2",
    "@csstools/postcss-sass": "^5.0.1",
    "autoprefixer": "^10.4.7",
    "babel-loader": "^8.2.5",
    "browser-sync": "^2.27.10",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "cross-var": "^1.1.0",
    "cssnano": "^5.1.12",
    "dotenv": "^16.0.1",
    "dotenv-cli": "^5.1.0",
    "eslint": "^8.18.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.3",
    "eslint-plugin-promise": "^6.0.0",
    "hashmark": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.4.14",
    "postcss-cli": "^9.1.0",
    "postcss-preset-env": "^7.7.2",
    "postcss-scss": "^4.0.4",
    "rimraf": "^3.0.2",
    "sass": "^1.53.0",
    "stylelint": "^14.9.1",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-config-standard-scss": "^4.0.0",
    "stylelint-scss": "^4.2.0",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "locomotive-scroll": "^4.1.4",
    "select2": "^4.1.0-rc.0",
    "sharer.js": "^0.5.1",
    "swiper": "^8.2.4",
    "vanilla-lazyload": "^17.8.2"
  }
}
