{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["standard"],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "no-new": "off",
        "semi-style": ["error", "last"],
        "comma-dangle": "off",
        "semi": "off",
        "space-before-function-paren": "off",
        "object-shorthand": "error"
    }
}
